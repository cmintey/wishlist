@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
    @apply h-full;
}

a:not(.unstyled):is(:not(.prose *)):not(.btn):not(.btn-icon):not(.app-bar a):not(.logo-item):not(a.card):not(
        .list-nav a
    ) {
    @apply text-primary-700 underline decoration-primary-500/20 decoration-dotted underline-offset-4 hover:decoration-primary-500 dark:text-primary-500;
}

label:not(.checkbox-label) {
    @apply space-y-1;
}

input[type="checkbox"] {
    @apply disabled:checked:bg-surface-400-500-token disabled:cursor-not-allowed;
}

.checkbox-label {
    @apply flex flex-row items-center gap-x-2;
}

.btn,
.chip,
.list-nav a,
.list-nav .list-option {
    @apply rtl:space-x-reverse;
}

.subtext {
    @apply text-sm text-surface-900/70 dark:text-surface-50/50;
}

/*! purgecss start ignore */
.ptr--icon,
.ptr--text {
    @apply text-primary-900 dark:text-primary-50;
}
/*! purgecss end ignore */
